<div class="dh-certificate-progress">
  <h2>{% trans %}Certificate Progress{% endtrans %}</h2>
  
  <div class="progress-summary">
    <div class="progress-bar">
      <div class="progress-fill" style="width: {{ progress.total_completed / progress.total_requirements * 100 }}%"></div>
    </div>
    <div class="progress-text">
      {{ progress.total_completed }}/{{ progress.total_requirements }} requirements completed
    </div>
  </div>

  <h3>{% trans %}Course Requirements{% endtrans %}</h3>
  <div class="course-requirements">
    {% for course in progress.courses %}
      <div class="requirement-item {{ course.completed ? 'completed' : 'incomplete' }}">
        <span class="course-number">{{ course.number }}</span>
        <span class="course-name">{{ course.name }}</span>
        <span class="semester">{{ course.semester }}</span>
        <span class="status">{{ course.completed ? '✓' : '○' }}</span>
      </div>
    {% endfor %}
  </div>

  <h3>{% trans %}General Requirements{% endtrans %}</h3>
  <div class="general-requirements">
    {% for req in progress.general %}
      <div class="requirement-item {{ req.completed ? 'completed' : 'incomplete' }}">
        <span class="requirement-name">{{ req.name }}</span>
        <span class="status">{{ req.completed ? '✓' : '○' }}</span>
      </div>
    {% endfor %}
  </div>
</div>