<div class="dh-certificate-progress-compact main-card">
  <h3>{{ title }}</h3>
  {% if progress %}
    <div class="progress-summary">
      {% set percentage = progress.total_requirements ? (progress.total_completed / progress.total_requirements * 100)|round : 0 %}
      <div class="progress-bar">
        <div class="progress-bar-fill" style="width: {{ percentage }}%">
          <span class="progress-text">{{ percentage }}%</span>
        </div>
      </div>
      <div class="requirements-count">
        {{ progress.total_completed|default(0) }} of {{ progress.total_requirements|default(1) }} requirements completed
      </div>
    </div>
    
    <div class="requirements-list">
      <h3>{% trans %}Course Requirements{% endtrans %}</h3>
      {% for course in progress.courses %}
        <div class="requirement-card requirement-item {{ course.completed ? 'completed' : '' }}">
          <span class="status-icon">{{ course.completed ? '✓' : '○' }}</span>
          <span class="course-number">{{ course.number }}</span>
          <span class="course-name">{{ course.name }}</span>
        </div>
      {% endfor %}

      <h3>{% trans %}General Requirements{% endtrans %}</h3>
      {% for requirement in progress.general %}
        <div class="requirement-card requirement-item {{ requirement.completed ? 'completed' : '' }}">
          <span class="status-icon">{{ requirement.completed ? '✓' : '○' }}</span>
          <span class="requirement-name">{{ requirement.name }}</span>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>
