<div class="program-info main-card">
    <h3>{{ title }}</h3>
    {% if announcements %}
      {% for announcement in announcements %}
        <div class="announcement {{ announcement.type }} {{ announcement.priority ? 'priority-' ~ announcement.priority }}">
          <h4 class="announcement-title">{{ announcement.title }}</h4>
          <div class="announcement-content">
            {{ announcement.content }}
            {% if announcement.location %}
              <div class="announcement-location">
                {% trans %}Location:{% endtrans %} {{ announcement.location }}
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    {% else %}
      <p>{% trans %}No announcements available.{% endtrans %}</p>
    {% endif %}
  </div>
