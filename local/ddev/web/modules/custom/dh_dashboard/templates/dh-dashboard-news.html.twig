{# Add the pager library #}
{{ attach_library('dh_dashboard/dashboard-pager') }}

<div{{ attributes.addClass('dh-dashboard-block') }}>
  <h2>{{ 'Latest News'|t }}</h2>
  
  {% if news.items is defined and news.items is not empty %}
    <div class="news-items-container">
      <div class="news-grid">
        {% for item in news.items %}
          <article class="dh-card news-item {{ item.category_class }}">
            <h3 class="card-title">
              <i class="fas fa-{{ item.icon }}"></i>
              {{ item.title }}
            </h3>
            <div class="card-meta">
              <span class="date">
                <i class="fas fa-calendar-alt"></i>
                {{ item.date }}
              </span>
              <span class="priority-indicator {{ item.priority_class }}">
                {{ item.priority|title }}
              </span>
            </div>
            <p class="card-content">{{ item.description }}</p>
          </article>
        {% endfor %}
      </div>
    </div>
  {% endif %}

  {# Include pager if we have more than one page #}
  {% if pager_data.total_pages > 1 %}
    <nav class="dashboard-pager" role="navigation" aria-label="{{ 'Pagination'|t }}"
      data-base-url="{{ path('dh_dashboard.main') }}"
      data-block-id="{{ pager_data.block_id }}">
      <ul class="pager__items">
        {# Previous button #}
        {% if pager_data.current_page > 0 %}
          <li class="pager__item pager__item--prev">
            <a href="javascript:void(0);" class="pager__link" data-page="{{ pager_data.current_page - 1 }}" rel="prev">
              <span aria-hidden="true">&laquo;</span> {{ 'Previous'|t }}
            </a>
          </li>
        {% endif %}
        
        {# Page numbers #}
        {% for i in 0..pager_data.total_pages - 1 %}
          {% if i == 0 or i == pager_data.total_pages - 1 or (i >= pager_data.current_page - 1 and i <= pager_data.current_page + 1) %}
            <li class="pager__item{% if i == pager_data.current_page %} is-active{% endif %}">
              <a href="javascript:void(0);" class="pager__link" data-page="{{ i }}">{{ i + 1 }}</a>
            </li>
          {% elseif i == pager_data.current_page - 2 or i == pager_data.current_page + 2 %}
            <li class="pager__item pager__item--ellipsis">
              <span>&hellip;</span>
            </li>
          {% endif %}
        {% endfor %}
        
        {# Next button #}
        {% if pager_data.current_page < (pager_data.total_pages - 1) %}
          <li class="pager__item pager__item--next">
            <a href="javascript:void(0);" class="pager__link" data-page="{{ pager_data.current_page + 1 }}" rel="next">
              {{ 'Next'|t }} <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        {% endif %}
      </ul>
    </nav>
  {% endif %}

  {# Debug output #}
  {% if show_debug %}
    <div class="debug-output">
      <pre>
        Template Variables:
        {{ _context|json_encode(constant('JSON_PRETTY_PRINT')) }}
      </pre>
    </div>
  {% endif %}
</div>

