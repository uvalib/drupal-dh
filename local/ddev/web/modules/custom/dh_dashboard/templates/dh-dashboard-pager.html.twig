{{ attach_library('dh_dashboard/dashboard-pager') }}
{#
/**
 * @file
 * Default theme implementation for DH Dashboard pager.
 *
 * Available variables:
 * - total: Total number of items.
 * - per_page: Items per page.
 * - current_page: Current page number.
 * - total_pages: Total number of pages.
 */
#}
{%
  set pager_classes = [
    'dashboard-pager',
    'pagination',
  ]
%}

{# Only show pager if we have more than one page #}
{% if pager_data.total_pages > 1 %}
  <nav class="dashboard-pager" role="navigation" aria-label="{{ 'Pagination'|t }}"
    {{ attributes }}
    data-base-url="{{ path('dh_dashboard.main') }}"
    data-block-id="{{ pager_data.block_id|default('') }}">
    
    {# Previous button #}
    <a href="javascript:void(0);" 
       class="pager__link{% if pager_data.current_page == 0 %} pager__item--disabled{% endif %}" 
       data-page="{{ pager_data.current_page - 1 }}" 
       rel="prev"
       {% if pager_data.current_page == 0 %}aria-disabled="true"{% endif %}>
      {{ 'Prev'|t }}
    </a>

    {# Page indicator #}
    <div class="pager-indicator">
      {{ 'Page %current of %total'|t({
        '%current': pager_data.current_page + 1,
        '%total': pager_data.total_pages
      }) }}
    </div>

    {# Next button #}
    <a href="javascript:void(0);" 
       class="pager__link{% if pager_data.current_page >= (pager_data.total_pages - 1) %} pager__item--disabled{% endif %}" 
       data-page="{{ pager_data.current_page + 1 }}" 
       rel="next"
       {% if pager_data.current_page >= (pager_data.total_pages - 1) %}aria-disabled="true"{% endif %}>
      {{ 'Next'|t }}
    </a>
  </nav>
{% endif %}
