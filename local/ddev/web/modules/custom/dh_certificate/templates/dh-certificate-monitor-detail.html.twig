{{ attach_library('dh_certificate/structure-monitor') }}

<div class="structure-monitor-detail">
  <h2>{{ monitor_id|capitalize ~ ' Structure Monitor'|t }}</h2>

  <div class="monitor-info">
    <p>{{ 'Last checked:'|t }} {{ last_checked|date('Y-m-d H:i:s') }}</p>
  </div>

  <div class="monitor-content">
    {% if changes is empty %}
      <p>{{ 'No changes detected.'|t }}</p>
    {% else %}
      <h3>{{ 'Changes Detected'|t }}</h3>
      <div class="changes-list">
        {% for change in changes %}
          <div class="change-item">
            {{ change }}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>

  <div class="monitor-actions">
    <a href="{{ path('dh_certificate.monitor_overview') }}" class="button">{{ 'Back to Overview'|t }}</a>
  </div>
</div>
