<div{{ attributes.addClass('certificate-progress') }}>
  {% if admin_links %}
    <div class="admin-links">{{ admin_links }}</div>
  {% endif %}
  {% if progress %}
    <div class="certificate-progress__summary">
      <div class="progress-stats">
        <div class="stat">
          <span class="completed">{{ progress.completed_courses }}</span>
          <span class="total">/{{ progress.total_courses }}</span>
          <span class="label">{{ 'Courses Completed'|t }}</span>
        </div>
        {% if progress.total_credits %}
          <div class="stat">
            <span class="label">{{ 'Credits'|t }}</span>
            <span class="value">{{ progress.total_credits }}/{{ progress.required_credits }}</span>
          </div>
        {% endif %}
      </div>
      
      <div class="progress-bar">
        <div class="progress" style="width: {{ progress.percentage }}%">
          <span class="progress-text">{{ progress.percentage }}%</span>
        </div>
      </div>
    </div>

    {% if progress.courses %}
      <div class="certificate-progress__courses">
        {% for course in progress.courses %}
          <div class="course-item course-item--{{ course.status|clean_class }}">
            <span class="course-title">{{ course.title }}</span>
            {% if course.mnemonic %}
              <span class="course-mnemonic">({{ course.mnemonic }})</span>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  {% endif %}
</div>

{% if is_admin %}
  <div class="admin-controls">
    <div class="button-group">
      <a href="{{ path('dh_certificate.courses') }}" class="button">{{ 'Manage Courses'|t }}</a>
      <a href="{{ path('dh_certificate.reset_progress') }}" class="button button--danger">{{ 'Reset Progress'|t }}</a>
    </div>
  </div>
{% endif %}
