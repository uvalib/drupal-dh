{#
/**
 * @file
 * Template for certificate course listing.
 *
 * Available variables:
 * - courses: Array of course entities
 * - categories: Array of course categories
 */
#}
<div class="certificate-courses">
  {% for category, courses in categories %}
    <div class="course-category">
      <h3>{{ category }}</h3>
      <div class="course-grid">
        {% for course in courses %}
          <div class="course-item">
            <h4>{{ course.title }}</h4>
            <div class="course-credits">{{ course.credits }} {{ 'Credits'|t }}</div>
            {% if course.next_offered %}
              <div class="course-offering">{{ 'Next offered:'|t }} {{ course.next_offered }}</div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>
