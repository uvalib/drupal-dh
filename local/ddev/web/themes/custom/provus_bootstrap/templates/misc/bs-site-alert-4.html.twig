{%
  set classes = [
  'alert',
  'bs-site-alert',
  level,
  close ? 'alert-dismissible fade show',
  'container'
]
%}
<div{{ attributes.addClass(classes) }} role="alert">
  {{ message }}
  {% if close %}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  {% endif %}
</div>
